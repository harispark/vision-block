<UserControl x:Class="VisionBlockApplication.Views.Controls.Blocks.Block_Filtrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisionBlockApplication.Views.Controls.Blocks"
             xmlns:localControls="clr-namespace:VisionBlockApplication.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <localControls:EmptyBlock>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text ="Surface min :"/>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text ="Surface max :"/>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text ="Remise à zéro :"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text=""/>
            </Grid>
        </localControls:EmptyBlock>
    </Grid>
</UserControl>
